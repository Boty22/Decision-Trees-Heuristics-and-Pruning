    "def entropy(p,n):\n",
    "    if p == 0 or n == 0:\n",
    "        return 0;\n",
    "    else:\n",
    "        pr = p/(p+n)\n",
    "        nr = n/(p+n)\n",
    "        return -pr*log2(pr) - nr*log2(nr)\n",
    "entropy(9,5)"
